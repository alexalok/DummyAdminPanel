<nav aria-label="Navigation">
    <ul class="pagination">
        <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
            <a href="@UrlGenerator(CurrentPage - 1)" class="page-link">Prev</a>
        </li>

        @for (var page = 1; page <= TotalPages; page++)
        {
            int page1 = page;
            <li class="page-item @(page == CurrentPage ? "active" : "")">
                <NavLink href="@UrlGenerator(page1)" class="page-link"> @(page1) </NavLink>
            </li>
        }

        <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
            <a href="@UrlGenerator(CurrentPage + 1)" class="page-link">Next</a>
        </li>
    </ul>
</nav>

@code
{
    [Parameter]
    public int CurrentPage { get; set; }

    [Parameter]
    public int TotalPages { get; set; }

    [Parameter]
    public Func<int, string> UrlGenerator { get; set; } = null!;
}
