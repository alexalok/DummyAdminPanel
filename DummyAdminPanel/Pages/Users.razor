@page "/"
@page "/users"

<PageTitle>Users</PageTitle>

<h1>Users</h1>

<PagedTablePageTemplate TData="UserPreview" CurrentPage="CurrentPage" PageUrlGenerator="UrlToPage" TryLoadDataForPage="TryLoadUsersForPage">
    <TableHeader>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Picture</th>
        <th scope="col">Actions</th>
    </TableHeader>
    <TableRowTemplate Context="user">
        <th scope="row">@user.Id</th>
        <td>@user.Title</td>
        <td>@user.FirstName</td>
        <td>@user.LastName</td>
        <td>
            <img src="@user.PictureUrl" height="50" width="50"/>
        </td>
        <td>
            <a href="posts?userId=@user.Id">View posts</a>
        </td>
    </TableRowTemplate>
</PagedTablePageTemplate>